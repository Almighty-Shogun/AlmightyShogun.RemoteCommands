<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <TargetFramework>net10.0</TargetFramework>
        
        <Version>1.4.1</Version>
        <Authors>Almighty-Shogun</Authors>
        <PackageId>AlmightyShogun.RemoteCommands</PackageId>

        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Description>A simple C# implementation for remote commands using attributes.</Description>

        <RepositoryType>git</RepositoryType>
        <RepositoryUrl>https://github.com/Almighty-Shogun/AlmightyShogun.RemoteCommands</RepositoryUrl>
        <PackageProjectUrl>https://github.com/Almighty-Shogun/AlmightyShogun.RemoteCommands</PackageProjectUrl>
    </PropertyGroup>

    <ItemGroup>
        <None Include="../README.md">
            <Pack>true</Pack>
            <PackagePath>\</PackagePath>
        </None>
    </ItemGroup>
    
    <ItemGroup>
      <PackageReference Include="AlmightyShogun.Logging" Version="1.0.1" />
      <PackageReference Include="AlmightyShogun.Utils" Version="1.2.2" />
      <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="10.0.1" />
    </ItemGroup>

</Project>
